<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>security.protect.patterns</param-name>
        <!-- qui configuriamo i pattern delle URL da proteggere -->
        <param-value>/home</param-value>
    </context-param>
    <context-param>
        <param-name>data.source</param-name>
        <!-- qui configuriamo in nome della data source(db) da usare nel codice -->
        <param-value>jdbc/gmarket</param-value>
    </context-param>

    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>layout.ftl</param-value>
    </context-param>

    <!-- Definizione della servlet -->
<!--    <servlet>-->
<!--        <servlet-name>homeServlet</servlet-name>-->
<!--        <servlet-class>it.univaq.gmartket.app.controller.HomeServlet</servlet-class>-->
<!--    </servlet>-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.gmartket.app.controller.LoginController</servlet-class>
    </servlet>
<!--    <servlet>-->
<!--        <servlet-name>logout</servlet-name>-->
<!--        <servlet-class>it.univaq.gmartket.app.controller.LogoutController</servlet-class>-->
<!--    </servlet>-->

    <!-- Mapping della servlet a un URL -->
<!--    <servlet-mapping>-->
<!--        <servlet-name>homeServlet</servlet-name>-->
<!--        <url-pattern>/home</url-pattern>-->
<!--    </servlet-mapping>-->
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
<!--    <servlet-mapping>-->
<!--        <servlet-name>logout</servlet-name>-->
<!--        <url-pattern>/logout</url-pattern>-->
<!--    </servlet-mapping>-->


    <!--Index-->
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <!--    Inizializzatore del Applicativo-->
    <listener>
        <listener-class>it.univaq.gmartket.framework.application.ApplicationInitializer</listener-class>
    </listener>
    <!--recupero delle risorse-->
    <resource-ref>
        <res-ref-name>jdbc/gmarket</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>

</web-app>